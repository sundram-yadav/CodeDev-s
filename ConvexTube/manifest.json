{
    "manifest_version": 3,
    "name": "ConvexTube",
    "version": "1.15",
    "description": "Take timestamped notes on YouTube videos with reminders, export, timer, and automatic theme sync.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "FocusTube"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}